#!/bin/sh
# prerm script for securedrop-app
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

#if the file exist try to put it in complain mode
check_exist_complain() {
    profile="$1"
    if [ -f /etc/apparmor.d/$profile ]; then
        aa-complain /etc/apparmor.d/$profile
    fi
}

case "$1" in
    remove|deconfigure)
        check_exist_complain var.chroot.document.usr.bin.tor
        check_exist_complain var.chroot.document.usr.lib.apache2.mpm-worker.apache2
        check_exist_complain var.chroot.source.usr.bin.tor
        check_exist_complain var.chroot.source.usr.lib.apache2.mpm-worker.apache2
    ;;

    upgrade)
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
