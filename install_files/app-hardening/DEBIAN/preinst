#!/bin/sh
# preinst script for securedrop-app
#
# see: dh_installdeb(1)

set -e
#set -x
# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

dpkg-divert --add --package securedrop-app-hardening --rename --divert /etc/ssh/sshd_config.orig /etc/ssh/sshd_config
dpkg-divert --add --package securedrop-app-hardening --rename --divert /etc/ssh/ssh_config.orig /etc/ssh/ssh_config
dpkg-divert --add --package securedrop-app-hardening --rename --divert /etc/pam.d/common-auth.orig /etc/pam.d/common-auth
dpkg-divert --add --package securedrop-app-hardening --rename --divert /etc/sysctl.conf.orig /etc/sysctl.conf

case "$1" in
    install)
        # Disable swap space
        swapoff -a
   ;;

    upgrade)
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
