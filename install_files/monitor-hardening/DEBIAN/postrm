#!/bin/sh
# postrm script for securedrop-monitor-hardening
#
# see: dh_installdeb(1)

set -e
#set -x
# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
. /usr/share/debconf/confmodule
check_delete_user(){
    user_name="$1"
    if [ "$(getent passwd | grep -q "^$user_name")" ]; then
        deluser $user_name
    fi
}

check_delete_group(){
    group_name="$1"
    if [ "$(getent group | grep -q "^$group_name")" ]; then
        delgroup $group_name
    fi
}

case "$1" in
    upgrade|failed-upgrade)
    ;;

    remove|abort-install|abort-upgrade|disappear)
        dpkg-divert --remove --package securedrop-monitor-hardening --rename /etc/ssh/sshd_config
        dpkg-divert --remove --package securedrop-monitor-hardening --rename /etc/ssh/ssh_config
        dpkg-divert --remove --package securedrop-monitor-hardening --rename /etc/pam.d/common-auth
        dpkg-divert --remove --package securedrop-monitor-hardening --rename /etc/sysctl.conf
    ;;

    purge)
        if service tor status; then
           service tor stop
        fi

        check_delete_user tor
        check_delete_group tor

        restart ssh
        iptables --flush

        sed -i '/app_host_entry/d' /etc/hosts

        db_purge
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
